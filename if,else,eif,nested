while True:
    num=int(input("enter the number"))

    if(num%2==0):
        print("even")
    else:
        print("odd")
        

#OUTPUT:-
#enter the number2
#even
#enter the number3
#odd
#enter the number



num1=10
num=20

symbol=input("Enter the symbol")

match symbol:
    case"+":
        print(num1+num)
    case"-":
        print(num1-num)
    case"*":
        print(num1*num)
    case _:
        print("you have  not entered the symbol ")


#OUTPUT:-
Enter the symbol+
