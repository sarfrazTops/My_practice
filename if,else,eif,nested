while True:
    marks=int(input("Enter the marks:-"))

    if(marks>=90 and marks<=100):
        print("Grade:A")
    if(marks>=60 and marks<=70):
        print("Grade:B")
    if(marks>=40 and marks<=50):
        print("GradE:C")


